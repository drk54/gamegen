<div class="background"></div>
<div class="page">
    {% if page.header %}
        <header role="banner">
            {{ page.header }}
        </header>
    {% endif %}

    {{ page.primary_menu }}

    <main role="main">
        <div class="container page__content">
            {% if is_front == false %}
                {{ page.content.pagetitle }}
            {% endif %}
            {{ page.content.gamegen_content }}
        </div>
    </main>

    {% if page.footer %}
        <footer class="footer" role="contentinfo">
            {{ page.footer }}
        </footer>
    {% endif %}
</div>